<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:ignore="MissingDefaultResource">

    <RelativeLayout
            android:layout_width="755dp"
            android:layout_height="match_parent" tools:ignore="MissingConstraints">

        <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"

                app:columnCount="7"
                app:orientation="horizontal"
                app:rowCount="7">


            <EditText
                    android:id="@+id/screen"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="696dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary1"
                    android:textSize="35dp"
                    app:layout_columnSpan="7"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_leftbracket"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="("
                    android:textSize="30dp"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_rightbracket"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_IPF"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="(1/x)"
                    android:textAllCaps="false"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_C"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_division"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_multi"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✖"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_back"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_input_delete"
                    android:textSize="30sp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_square"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="76dp"
                    android:layout_height="43dp"
                    android:text="x^2"
                    android:textAllCaps="false"
                    android:textSize="30dp"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_cube"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x^3"
                    android:textAllCaps="false"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_pai"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:text="π"
                    android:textAllCaps="false"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_7"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="7"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_8"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_9"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_sub"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:text="-"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_factorial"
                    android:textAllCaps="false"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:text="x!"
                    android:textSize="30dp"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_SOE"
                    android:textAllCaps="false"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="√"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_SOE3"
                    android:textAllCaps="false"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 3√"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_4"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="4"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>


            <Button
                    android:id="@+id/bt_5"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_6"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_add"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="191dp"
                    android:text="+"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_e"
                    android:textAllCaps="false"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="e"
                    android:textSize="30dp"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_ln"
                    android:textAllCaps="false"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ln"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>


            <Button
                    android:id="@+id/bt_log"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="log"
                    android:textAllCaps="false"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_1"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_2"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_3"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>


            <Button
                    android:id="@+id/bt_equal"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"
                    app:layout_rowSpan="2"/>

            <Button
                    android:id="@+id/bt_sin"
                    android:textAllCaps="false"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="78dp"
                    android:layout_height="24dp"
                    android:text="sin"
                    android:textSize="30dp"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_cos"
                    android:textAllCaps="false"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cos"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_tan"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_height="wrap_content"
                    android:autoText="true"
                    android:text="tan"
                    android:textAllCaps="false"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill" android:layout_width="wrap_content"/>

            <Button
                    android:id="@+id/bt_help"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="？"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_0"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>

            <Button
                    android:id="@+id/bt_point"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="."
                    android:textSize="30dp"
                    app:layout_columnSpan="1"
                    app:layout_gravity="fill"/>


        </androidx.gridlayout.widget.GridLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>